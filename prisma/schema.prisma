model Employee {
  id               String   @id @default(uuid())
  firstName        String
  lastName         String
  dateOfBirth      DateTime
  gender           String
  email            String
  manager          String
  designation      String
  department       String
  employeementType String
  dateOfJoining    DateTime
  workLocation     String
  createAt         DateTime @default(now())
  updateAt         DateTime @updatedAt
}

model Designation {
  id       String   @id @default(uuid())
  name     String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model Department {
  id       String   @id @default(uuid())
  name     String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}

model WorkLocation {
  id       String   @id @default(uuid())
  name     String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}
